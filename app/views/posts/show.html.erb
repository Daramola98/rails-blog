<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
  <br/>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div id="comments">
  <h3>Comments</h3>
     <% @post.comments.each do |comment| %>
       <%= render 'comments/comment', locals: {comment: comment} %>
     <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
